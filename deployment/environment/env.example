# CRM System Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://crm_user:your_secure_password@localhost:5432/crm_production
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crm_production
DB_USER=crm_user
DB_PASSWORD=your_secure_password

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_random
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_make_it_long_and_random
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=https://your-frontend-domain.vercel.app
CORS_CREDENTIALS=true

# =============================================================================
# REDIS CONFIGURATION (for caching)
# =============================================================================
REDIS_URL=redis://:your_redis_password@localhost:6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=combined

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@yourcrm.com

# =============================================================================
# CLOUD STORAGE (for backups)
# =============================================================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your-crm-backups-bucket

# Google Cloud Storage Configuration
GCS_BUCKET=your-crm-backups-bucket
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=your_grafana_password

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=https://your-backend-service.onrender.com
VITE_APP_NAME=CRM System
VITE_APP_VERSION=1.0.0

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Slack Webhook (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Sentry (for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment these for development
# NODE_ENV=development
# LOG_LEVEL=debug
# CORS_ORIGIN=http://localhost:5173
